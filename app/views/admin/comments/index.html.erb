<div class="row content">
	<div class="col-md-12">
		<h1>All Comments</h1>
	</div>
</div>
<hr />

<% @comments.each do |comment| %>
<div class="row content">
	<div class="col-md-12">
		<p><strong>
			<%= comment.name %></strong> Commented on 
			<strong><%= comment.post.title %></strong>
			<span><%= time_ago_in_words(comment.created_at) %> ago</span>
		</p>
		<div class="well">
			<p><%= comment.message %></p>
			<p class="pull-right">
				<%= link_to admin_comment_path(comment), method: :delete, data: { confirm: 'Are You Sure?' }, class: 'btn btn-danger btn-block' do %>
					<i class="fa fa-remove"></i> Delete
				<% end %>
			</p>
		</div>
	</div>
</div>
<% end %>
