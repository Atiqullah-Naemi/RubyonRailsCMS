<div class="row content">
	<div class="col-md-12">
		<h1>All Users</h1>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<%= render 'layouts/partials/search', searchRoute: admin_users_path %>
	</div>
</div>
<hr />
<div class="row content">
	<div class="col-md-12">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>ID</th>
					<th>Profile</th>
					<th>Username</th>
					<th>Email</th>
					<th>Created At</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
				<tr class="user-row">
					<td><%= user.id %></td>
					<td class="users-list" style="background: url(<%= user.image %>);"></td>
					<td><%= user.username %></td>
					<td><%= user.email %></td>
					<td><%= time_ago_in_words(user.created_at) %> ago</td>
					<td>
						<div class="row">
							<div class="col-md-12">
								<%= link_to "Delete", method: :delete, data: { confirm: 'Are You Sure?' }, class: 'btn btn-danger btn-block' do %>
									<i class="fa fa-trash" aria-hidden="true"></i> Delete
								<% end %>
							</div>
						</div>
					</td>
				</tr>	
				<% end %>
			</tbody>
		</table>
	</div>
</div>
