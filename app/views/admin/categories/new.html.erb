<div class="row">
	<div class="col-md-12">
		<%= form_for [:admin, @category] do |f| %>
			<div class="form-group">
				<%= f.label :name %>
				<%= f.text_field :name, class: 'form-control' %>
			</div>
			<div class="form-group">
				<%= f.label :content %>
				<%= f.text_area :content, class: 'form-control' %>
			</div>
			<div class="form-group">
				<%= f.submit 'Create New Category', class: 'btn btn-default pull-right' %>
			</div>
		<% end %>
	</div>
</div>

